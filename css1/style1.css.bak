/* Reset and global styles */
* {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
    list-style: none;
    text-decoration: none;
}

/* Header styles */
header {
    position: fixed;
    right: 0;
    top: 0;
    z-index: 1000;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 33px 9%;
    background: linear-gradient(245.59deg, #FF1818 0%, #FFF783 43%, #FFFFFF 100%);
}

body {
    background: white; /* Set the background color of the entire page to white */
}

.logo {
    font-size: 30px;
    font-weight: 700;
    color: orange;
    font-style: italic;
}

.navlist {
    display: flex;
}

.navlist a {
    color: white;
    margin-left: 60px;
    font-size: 15px;
    font-weight: 600;
    border-bottom: 2px solid transparent;
    transition: all 0.55s ease;
}

.navlist a:hover {
    border-bottom: 2px solid white;
}

/* Heading styles */
.heading {
    text-align: center;
    margin-top: 130px;
    margin-bottom: 1rem; 
}

.heading span {
    font-weight: 700;
    color: red;
    margin-bottom: 3rem; 
}

.heading p {
    font-size: 0.938rem;
    font-weight: 300;
    margin-bottom: 3rem; 
}


/* Car container styles */
.cars-container {
    max-width: 1700px;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    margin-top: 2rem;
}

.cars-container .box {
    flex: 1 1 calc(25% - 2rem);
    position: relative;
    height: 200px;
    border-radius: 0.5rem;
    overflow: hidden;
    transition: transform 0.5s;
	margin-bottom: 20px;
}


.cars-container .box:hover {
    background: red;
}

.cars-container .box img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    overflow: hidden;
}

.cars-container .box h2 {
    position: absolute;
    bottom: 1rem;
    left: 1rem;
    font-weight: 700;
    font-size: 1rem;
    background: white;
    padding: 8px;
    border-radius: 0.5rem;
    color: black;
}

.cars-container .box:hover h2 {
    background: red;
    color: white;
}

.footer{
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	flex-flow: row wrap;
	padding: 100px;
	color: #FFFFFF;
	background-color: #FFA500;
}
.footer > *{
	flex: 1 50%;
}
.footer-left{
	margin-right: 1.25cm;
	margin-bottom: 2cm;
	line-height: 1;
}
.footer-left img{
	width:150px;
}
.h2{
	font-weight: 600;
	font-size: 17px;
	
}
.footer ul{
	list-style: none;
	padding-left: 0;
}
.footer li{
	line-height: 1cm;
}
.footer li h2 {
    color: black;
}
.footer a{
	text-decorations: none;
}
.footer-right{
	display: -webkit-flex;
	display: -moz-flex;
	display: -ms-flex;
	display: -o-flex;
	display: flex;
	flex-flow: row wrap;
}
.footer-right > *{
	flex: 1 50%;
	margin-right: 1.25cm;
}
.box a{
	color: #FFFFFF;
}
.footer-bottom{
	text-align: center;
	color: #FFFFFF;
	padding-top: 50px;
}
.footer-left p{
	padding-right: 20%;
	color: #999;
}
.socials{
	padding: 20px; /* Add some padding to separate it from the paragraph */
	margin-top: 20px;
}
.socials a{
	background: #FF4500;
	width: 40px;
	height: 40px;
	display: inline-block;
	margin-right: 10px;
}
.socials a i{
	color: #e7f2f4;
	padding: 10px 12px;
	font-size: 20px;
}
@media screen and (min-width: 600px){
	.footer-right > *{
		flex: 1;
	}
	.footer-left{
		flex: 1 0px;
	}
	.footer-right{
		flex: 2 opx;
	}
}

@media (max width: 600px){
	.footer{
		padding: 15px;
	}
	main{
		font-size: 55px;
	}
}

/* Modal styles */
.modal {
  display: none;
  position: fixed;
  z-index: 1;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: rgb(0,0,0);
  background-color: rgba(0,0,0,0.9);
}

.modal-content {
  margin: 5% auto;
  padding: 20px;
  width: 80%;
  max-width: 600px;
  background-color: #fff;
  position: relative;
}

.close {
  position: absolute;
  top: 0;
  right: 0;
  color: #ccc;
  font-size: 30px;
  font-weight: bold;
  cursor: pointer;
}

/* Additional styling for modal content */
#modalImage {
  width: 100%;
  max-height: 400px;
  object-fit: cover;
}

#modalDescription {
  margin-top: 10px;
}
